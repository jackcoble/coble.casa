---
services:
  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex
    network_mode: host
    environment:
      - PUID=0
      - PGID=0
      - TZ=Europe/London
      - VERSION=docker
    volumes:
      - {{ plex_config_dir }}:/config
      - {{ plex_media_dir }}:/media
    restart: unless-stopped
